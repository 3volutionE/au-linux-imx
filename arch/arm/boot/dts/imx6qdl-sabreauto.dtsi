/ {
	aliases {
		mxcfb0 = &mxcfb1;
		mxcfb1 = &mxcfb2;
	};

	memory {
		reg = <0x10000000 0x40000000>;
	};

	soc {
		gpmi-nand@00112000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_gpmi_nand_1>;
			status = "okay";
		};

		aips-bus@02000000 { /* AIPS1 */
			spba-bus@02000000 {
				spdif: spdif@02004000 {
					compatible = "fsl,fsl-spdif";
					reg = <0x02004000 0x4000>;
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_spdif_1>;
					fsl,spdif-dma-events = <15 14>;
					clocks = <&clks 198>;
					clock-names = "spdif";
					interrupts = <0 52 0x04>;
					status = "okay";
			       };

				ecspi@02008000 { /* eCSPI1 */
					fsl,spi-num-chipselects = <1>;
					cs-gpios = <&gpio3 19 0>;
					pinctrl-names = "default";
					pinctrl-0 = <&pinctrl_ecspi1_1 &pinctrl_ecspi1_sabreauto>;
					status = "okay"; /* pin conflict with WEIM NOR */

					flash: m25p80@0 {
						#address-cells = <1>;
						#size-cells = <1>;
						compatible = "st,m25p32";
						spi-max-frequency = <20000000>;
						reg = <0>;
					};
				};
			};

			ldb@020e0000 {
				ipu_id = <1>;
				disp_id = <0>;
				ext_ref = <1>;
				mode = "sep0";
				sec_ipu_id = <1>;
				sec_disp_id = <1>;
				status = "okay";
			};
		};

		aips2: aips-bus@02100000 {
			ethernet@02188000 {
				phy-mode = "rgmii";
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_enet_2>;
				status = "okay";
			};

			usdhc3: usdhc@02198000 {
				cd-gpios = <&gpio6 15 0>;
				wp-gpios = <&gpio1 13 0>;
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usdhc3_1>;
				status = "okay";
			};

			uart4: serial@021f0000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_uart4_1>;
				status = "okay";
			};

			i2c@021a4000 { /* I2C2 */
                                status = "okay";
                                clock-frequency = <100000>;
                                pinctrl-names = "default";
                                pinctrl-0 = <&pinctrl_i2c2_3>;

				pmic: pfuze100@08 {
					compatible = "fsl,pfuze100";
					reg = <0x08>;

					regulators {
						sw1a_reg: pfuze100__sw1a {
							regulator-min-microvolt = <300000>;
							regulator-max-microvolt = <1875000>;
							regulator-standby-microvolt = <18000>;
							regulator-boot-on;
							regulator-always-on;
						};

						sw1c_reg: pfuze100__sw1c {
							regulator-min-microvolt = <300000>;
							regulator-max-microvolt = <1875000>;
							regulator-boot-on;
							regulator-always-on;
						};

						sw2_reg: pfuze100__sw2 {
							regulator-min-microvolt = <800000>;
							regulator-max-microvolt = <3950000>;
							regulator-boot-on;
							regulator-always-on;
						};

						sw3a_reg: pfuze100__sw3a {
							regulator-min-microvolt = <400000>;
							regulator-max-microvolt = <1975000>;
							regulator-boot-on;
							regulator-always-on;
						};

						sw3b_reg: pfuze100__sw3b {
							regulator-min-microvolt = <400000>;
							regulator-max-microvolt = <1975000>;
							regulator-boot-on;
							regulator-always-on;
						};

						sw4_reg: pfuze100__sw4 {
							regulator-min-microvolt = <800000>;
							regulator-max-microvolt = <3950000>;
						};

						swbst_reg: pfuze100__swbst {
							regulator-min-microvolt = <5000000>;
							regulator-max-microvolt = <5150000>;
						};

						snvs_reg: pfuze100__vsnvs {
							regulator-min-microvolt = <1200000>;
							regulator-max-microvolt = <3000000>;
							regulator-boot-on;
							regulator-always-on;
						};

						vref_reg: pfuze100__vrefddr {
							regulator-boot-on;
							regulator-always-on;
						};

						vgen1_reg: pfuze100__vgen1 {
							regulator-min-microvolt = <800000>;
							regulator-max-microvolt = <1550000>;
						};

						vgen2_reg: pfuze100__vgen2 {
							regulator-min-microvolt = <800000>;
							regulator-max-microvolt = <1550000>;
						};

						vgen3_reg: pfuze100__vgen3 {
							regulator-min-microvolt = <1800000>;
							regulator-max-microvolt = <3300000>;
						};

						vgen4_reg: pfuze100__vgen4 {
							regulator-min-microvolt = <1800000>;
							regulator-max-microvolt = <3300000>;
							regulator-always-on;
						};

						vgen5_reg: pfuze100__vgen5 {
							regulator-min-microvolt = <1800000>;
							regulator-max-microvolt = <3300000>;
							regulator-always-on;
						};

						vgen6_reg: pfuze100__vgen6 {
							regulator-min-microvolt = <1800000>;
							regulator-max-microvolt = <3300000>;
						};
					};
				};
			};
		};

		ipu1: ipu@02400000 { /* IPU1 */
			bypass_reset = <0>;
		};
	};

	sound-spdif {
		compatible = "fsl,imx-audio-spdif",
			     "fsl,imx-sabreauto-spdif";
		model = "imx-spdif";
		spdif-controller = <&spdif>;
		spdif-tx = <0>;		/* 1:enable, 0:disable */
		spdif-rx = <1>;		/* 1:enable, 0:disable */
	};

	mxcfb1: fb@0 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "ldb";
		interface_pix_fmt = "RGB666";
		mode_str ="LDB-XGA";
		default_bpp = <16>;
		int_clk = <0>;
		late_init = <0>;
		status = "disabled";
	};

	mxcfb2: fb@1 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "ldb";
		interface_pix_fmt = "RGB666";
		mode_str ="LDB-XGA";
		default_bpp = <16>;
		int_clk = <0>;
		late_init = <0>;
		status = "disabled";
	};

	v4l2_out {
		compatible = "fsl,mxc_v4l2_output";
		status = "okay";
	};
};
