/dts-v1/;

#include <dt-bindings/interrupt-controller/irq.h>
#include "imx6q.dtsi"
#include "imx6qdl-nitrogen6x.dtsi"

/ {
	model = "Boundary Devices i.MX6 Quad Nitrogen6x Board - CWC ov5640 config";
	compatible = "fsl,imx6q-nitrogen6x", "fsl,imx6q";

	/delete-node/ v4l2_cap_1;
	/delete-node/ v4l2_cap_2;
	/delete-node/ v4l2_cap_3;
};

&flexcan1 {
	status = "disabled" ;
};

&hdmi_core {
	status = "disabled";
};

&i2c2 {
	/delete-node/ ov5642@3d;
	/delete-node/ ov5640_mipi@3e;

	ov5640@3c {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ipu1_2>;
		clocks = <&clks 200>;
		clock-names = "csi_mclk";
		DOVDD-supply = <&reg_1p8v>;
		AVDD-supply = <&reg_2p5v>;
		DVDD-supply = <&reg_1p8v>;
		pwn-gpios = <&gpio1 6 1>;
		rst-gpios = <&gpio1 8 0>;
		ipu_id = <0>;
		csi_id = <0>;
		mclk = <24000000>;
		mclk_source = <0>;
	};
};

&i2c3 {
	inter-byte-delay = <170>;
	stop-delay = <30>;

	/delete-node/ ov5640@3c;
	/delete-node/ tsc2004@48;

	ar1020_i2c@4d {
		compatible = "ar1020_i2c";
		reg = <0x4d>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_tsc2004>;
		interrupt-parent = <&gpio4>;
		interrupts = <20 IRQ_TYPE_LEVEL_LOW>;
		status = "okay";
	};

	hookswitch@20 {
		compatible = "cwc_hookswitch";
		reg = <0x20>;
		status = "okay";
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "disabled";
};

&mxcfb3 {
	status = "disabled";
};

&mxcfb4 {
	status = "disabled";
};

&sata {
	status = "okay";
};

&v4l2_cap_0 {
	ipu_id = <0>;
	csi_id = <0>;
	mipi_camera = <0>;
	status = "okay" ;
};
