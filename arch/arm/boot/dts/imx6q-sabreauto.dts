/dts-v1/;
#include "imx6q.dtsi"
#include "imx6qdl-sabreauto.dtsi"

/ {
	model = "Freescale i.MX6Q SABRE Automotive Infotainment Board";
	compatible = "fsl,imx6q-sabreauto", "fsl,imx6q";

	soc {
		aips-bus@02000000 { /* AIPS1 */
			iomuxc@020e0000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_hog>;

				hog {
					pinctrl_hog: hoggrp {
						fsl,pins = <
							/*RGMII Phy Interrupt */
							MX6Q_PAD_GPIO_19__GPIO4_IO05 0x80000000
							MX6Q_PAD_EIM_EB0__GPIO2_IO28 0x80000000
							/*
							 * SABREAUTO_I2C3_STEER
							 * enable either EIM_D18 or i2c3_sda route path
							 */
							MX6Q_PAD_EIM_A24__GPIO5_IO04 0x80000000
							/* max7310 reset pin */
							MX6Q_PAD_SD2_DAT0__GPIO1_IO15 0x80000000
						>;
					};
				};

				sabreauto {
					pinctrl_ecspi1_sabreauto: ecspi1-sabreauto {
						fsl,pins = <
							MX6Q_PAD_EIM_D19__GPIO3_IO19 0x80000000
						>;
					};
				};
			};
		};

		ahci@02200000 { /* AHCI SATA */
			status = "okay";
		};

		ipu1: ipu@02400000 { /* IPU1 */
			status = "okay";
		};

		ipu2: ipu@02800000 { /* IPU2 */
			bypass_reset = <0>;
			status = "okay";
		};
	};

	mxcfb1: fb@0 {
		status = "okay";
	};

	mxcfb2: fb@1 {
		status = "okay";
	};
};
